<% provide(:title, 'Log in') %>

<div class="column small-8 small-offset-2 user-form">
  <h2>Log in</h2>
  <%= form_for(:session, url: login_path, class: 'login-form form') do |f| %>
    

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %> 

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <fieldset class="fieldset">
      <legend>Remember me?</legend>
      <%= f.check_box :remember_me %><%= f.label :remember_me, 'Remember my login details for 10 days on this device.' %>
    </fieldset>

    <%= f.submit 'Log in', class: 'button large' %>
  <% end %>
</div><!-- end .column -->