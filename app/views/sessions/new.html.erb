<% provide(:title, 'Log in') %>

<div class="column small-8 small-offset-2 user-form">
  <h2>Log in</h2>
  <%= form_for(:session, url: login_path, class: 'login-form form') do |f| %>
    

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %> 

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <div class="input-group checkbox-container">
      <label class="input-group-label" for="session_remember_me">
        <%= f.check_box :remember_me, class: 'input-group-field checkbox' %>
        <span>Remember me on this device.</span>
      </label>
    </div>

    <%= f.submit 'Log in', class: 'button large' %>
  <% end %>
</div><!-- end .column -->