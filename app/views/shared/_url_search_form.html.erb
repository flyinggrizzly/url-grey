<fieldset class="fieldset short_url_search_form">
  <legend>Search existing short URLs</legend>

  <%= form_tag(search_short_urls_path, method: 'get', id: 'short_url_search') do %>
    <%= label_tag :search, 'Search short URLs by slug' %>
    <%= text_field_tag :search, params[:search], placeholder: 'Search by short URL slug' %>
    <%= submit_tag 'Search', name: nil, class: 'button' %>
  <% end %>

  <%= form_tag(search_short_urls_path, method: 'get', id: 'short_url_reverse_search') do %>
    <%= label_tag :reverse_search, 'Search short URLs by destination URL' %>
    <%= text_field_tag :reverse_search, params[:reverse_search], placeholder: 'Reverse search by destination URL' %>
    <%= submit_tag 'Search', name: nil, class: 'button' %>
  <% end %>
</fieldset>
