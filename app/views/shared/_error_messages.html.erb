<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="callout alert">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div><!-- end .alert -->
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li class="error-item"><%= msg %></li>
      <% end %>
    </ul>
  </div><!-- end .error_explanation -->
<% end %>