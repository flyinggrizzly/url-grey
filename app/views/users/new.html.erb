<% provide(:title, 'New User') %>

<div class="column small-8 small-offset-2 user-form">
  <h2>Creating a new user</h2>
  <%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, 'Confirmation' %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit 'Create this user', class: 'button' %>
  <% end %>
</div><!-- end .column -->

