<% provide(:title, 'Edit user') %>

<% if current_user == @user %>
  <h2>Update your info and settings</h2>
<% else %>
  <h2>Update <%= @user.name %>'s info and settings</h2>
<% end %>

<div class="column small-6 small-offset-3 input-group">
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

    <%= f.label :name, class: 'text-left' %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <fieldset class="fieldset dragons">
      <legend>Here there be dragons!</legend>
      <%= f.check_box :admin %><%= f.label :admin, 'Make this user an admin?' %>
    </fieldset>

    <%= f.submit 'Save changes', class: 'button large' %>
  <% end %><!-- end `form_for(@user)` -->
</div><!-- end .column .input-group -->